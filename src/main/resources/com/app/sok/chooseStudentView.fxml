<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="222.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.sok.controllers.chooseStudentController">
    <children>
        <Button fx:id="saveButton" layoutX="274.0" layoutY="35.0" mnemonicParsing="false" onMouseClicked="#save"
                text="Сохранить" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                AnchorPane.rightAnchor="10.0"/>
        <ListView fx:id="studentsListView" layoutX="21.0" layoutY="144.0" onMouseClicked="#onStudentsListViewClicked"
                  prefWidth="286.0" AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="45.0"/>
        <TextField fx:id="searchTextField" layoutX="14.0" layoutY="49.0" onKeyTyped="#onKeyTyped" prefHeight="25.0"
                   prefWidth="286.0" promptText="Поиск..." AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                   AnchorPane.topAnchor="10.0">
            <font>
                <Font name="System Italic" size="12.0"/>
            </font>
        </TextField>
    </children>
</AnchorPane>
